<p id="notice"><%= notice %></p>

<h1>Listing Lifts</h1>

<table>
  <thead>
    <tr>
      <th>Style</th>
      <th>Description</th>
      <th>Rep count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lifts.each do |lift| %>
      <tr>
        <td><%= lift.style %></td>
        <td><%= lift.description %></td>
        <td><%= lift.rep_count %></td>
        <td><%= link_to 'Show', lift %></td>
        <td><%= link_to 'Edit', edit_lift_path(lift) %></td>
        <td><%= link_to 'Destroy', lift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

