<!-- USER VIEW -->
<% if user_signed_in? %>
	<ul class="off-canvas-list">
		<li><label>#GainzProject</label></li>
		<% Category.all.each do |category| %>
			<li> <a href ="/lifts?by_style=<%=category.style%>"> <%= category.name %> </a></li>
		<% end %>
		<li>
			<%= link_to('Logout', destroy_user_session_path, :method => :delete, data: { no_turbolink: true } ) %>
		</li>
	</ul>

<!-- ADMIN VIEW -->
<% elsif admin_signed_in? %>
	<ul class="off-canvas-list">
		<li>
			<%= link_to('Logout', destroy_admin_session_path, :method => :delete, data: { no_turbolink: true } ) %>
		</li>
	</ul>

<!-- GUEST VIEW -->
<% else %>
	<ul class="off-canvas-list">
		<li><label>#GainzProject</label></li>
		<li>
			<% if user_signed_in? %>
			<%= link_to('User Logout', destroy_user_session_path, :method => :delete, data: { no_turbolink: true } ) %>        
			<% else %>
			<%= link_to('User Login', new_user_session_path, data: { no_turbolink: true } )  %>  
			<% end %>
		</li>
		<li>
			<% if admin_signed_in? %>
			<%= link_to('Admin Logout', destroy_admin_session_path, :method => :delete, data: { no_turbolink: true } ) %>        
			<% else %>
			<%= link_to('Admin Login', new_admin_session_path, data: { no_turbolink: true } )  %>  
			<% end %>
		</li>
	</ul>
<% end %>