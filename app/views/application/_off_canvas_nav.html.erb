<!-- USER VIEW -->
<% if user_signed_in? %>
	<ul class="off-canvas-list">
		<li><label>#GainzProject</label></li>
		<% Category.all.each do |category| %>
			<li> <a href ="/lifts?by_style=<%=category.style%>"> <%= category.name %> </a></li>
		<% end %>
		<li><label>Account Settings </label></li>
		<li>
			<%= link_to('Edit Username', edit_user_path(current_user)) %>
		</li>
		<li>
			<%= link_to "Change Password", edit_user_registration_path %>
		</li>
		<li>
			<%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
		</li>
	</ul>

<!-- ADMIN VIEW -->
<% elsif admin_signed_in? %>
	<ul class="off-canvas-list">
		<li><label>#GainzProject</label></li>
		<li>
			<%= link_to 'New Workout', new_workout_path %>
		</li>
		<li>
			<%= link_to "Change Password", edit_admin_registration_path %>
		</li>
		<li>
			<%= link_to('Logout', destroy_admin_session_path, :method => :delete) %>
		</li>
	</ul>

<!-- GUEST VIEW -->
<% else %>
	<ul class="off-canvas-list">
		<li><label>#GainzProject</label></li>
		<li>
			<% if user_signed_in? %>
			<%= link_to('User Logout', destroy_user_session_path, :method => :delete) %>        
			<% else %>
			<span class ="primary-color"><%= link_to('Login', new_user_session_path)  %></span> 
			<%= link_to("Sign up", new_user_registration_path) %>
			<% end %>
		</li>
<!-- 		<li>
			<% if admin_signed_in? %>
			<%= link_to('Admin Logout', destroy_admin_session_path, :method => :delete) %>        
			<% else %>
			<%= link_to('Admin Login', new_admin_session_path)  %>  
			<% end %>
		</li> -->
	</ul>
<% end %>