<div class = "small-11 medium-8 small-centered columns instance">
	<%= simple_form_for(@workout) do |f| %>
	<%= f.error_notification %>

	<div class="form-inputs">
		<%= f.input :title %>
		<%= f.input :workout_date, as: :date, html5: true, :input_html => { :value => Date.today} %>
	</div>

	<div class="form-actions">
		<%= f.button :submit %>
	</div>
	<% end %>
</div>